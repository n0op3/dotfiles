#!/bin/bash
apply_pywal_colors() {
    if [ -f ~/.cache/pywal_on ]; then
        (cat ~/.cache/wal/sequences &)
        source ~/.cache/wal/colors-tty.sh
        export PYWAL=1
    else
        if [ "$PYWAL" -eq 1 ]; then
            reset
        fi
        export PYWAL=0
    fi
}

precmd() {
    apply_pywal_colors
}

startup() {
    fastfetch
}
