@theme "~/.cache/wal/colors-rofi-dark.rasi"

textbox-prompt-colon {
    str: "";
}

configuration {
	show-icons: true;
	location: 0;
	font: "JetBrainsMono Nerd Font 12";	
	display-drun: "打ち上げ:";
}

window {
    width: 40%;
    border: 2px solid;
    border-color: @selected-active-background;
}

listview {
    lines: 16;
}

element-icon {
	size: 24 px;
	background-color: inherit;
	padding: 0 6 0 0;
	alignment: vertical;
}

element-text selected {
    text-color: @background;
}
