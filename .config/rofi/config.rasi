@theme "/dev/null"

* {
	bg: #181E27;
	background-color: @bg;
}

configuration {
	show-icons: true;
	icon-theme: "Papirus";
	location: 0;
	font: "JetBrainsMono Nerd Font 12";	
	display-drun: "Launch:";
}

window { 
	width: 35%;
	transparency: "real";
	orientation: vertical;
  border: 2px solid;
	border-color: #bb4cdf;
  border-radius: 4px;
}

mainbox {
	children: [inputbar, listview];
}

element {
	padding: 4 12;
	text-color: #EFE7DD;
}

element selected {
  border-radius: 4px;
	background-color: #bb4cdf;
}

element-text {
	background-color: inherit;
	text-color: inherit;
}

element-icon {
	size: 48 px;
	background-color: inherit;
	padding: 0 6 0 0;
	alignment: vertical;
}

listview {
	columns: 2;
	lines: 5;
	padding: 8 0;
	fixed-height: true;
	fixed-columns: true;
	fixed-lines: true;
	border: 0 10 6 10;
}

entry {
	text-color: #EFE7DD;
	padding: 10 10 0 0;
	margin: 0 0 0 0;
}

inputbar {
	background-image: url("~/.config/rofi/background.png", width);
	padding: 200 0 0;
	margin: 0 0 0 0;
} 

prompt {
	text-color: #aaffaa;
	padding: 10 6 0 10;
	margin: 0 -2 0 0;
}
